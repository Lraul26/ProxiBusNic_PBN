<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:padding="15.0dp"
    android:layout_height="match_parent">
    <TextView
        android:gravity="center"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="@string/lblListadoParadas"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="90.0dp"
        android:id="@+id/tvtitulo" />

    <ListView
        android:cacheColorHint="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/lvParadas" />
 
          <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutEditarParada4">
           <ImageButton
            android:src="@drawable/cancelar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnEliminar" 
            android:background="@color/background"/>
            <TextView
                android:text="Text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textView2" />
        
                  <ImageButton
            android:src="@drawable/aceptar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnAgregar" 
            android:background="@color/background"/>

        

         
        
        </LinearLayout>
       <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fg" >

           <TextView
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Eliminar paradas"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="122.0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView2" />

        
           <TextView
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="122.0dp"
            android:layout_height="match_parent"
            android:id="@+id/fgdhgf" />

        
           <TextView
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="Agregar paradas"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="122.0dp"
            android:layout_height="match_parent"
            android:id="@+id/txtxt" />
        </LinearLayout>
</LinearLayout>
