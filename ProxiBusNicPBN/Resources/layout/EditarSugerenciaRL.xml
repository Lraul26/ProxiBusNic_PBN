<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:padding="15.0dp"
    android:layout_height="match_parent">
    <TextView
        android:textColor="@color/blanco"
        android:gravity="center"
        android:text="Editar Comentario"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <TextView
        android:textColor="@color/blanco"
        android:gravity="center"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="94.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/txtParada" />
    <EditText
        android:textColorHint="@color/blanco"
        android:hint=""
        android:inputType="textMultiLine"
        android:layout_width="match_parent"
        android:layout_height="74.5dp"
        android:id="@+id/editarsugerencia" />
    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5" />
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">
        <ImageButton
            android:gravity="center"
            android:contentDescription=""
            android:background="@color/background"
            android:src="@drawable/aceptar"
            android:layout_width="100.0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnAceptarComent" />
        <ImageButton
            android:gravity="center"
            android:contentDescription=""
            android:background="@color/background"
            android:src="@drawable/cancelar"
            android:layout_width="100.0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnEliminarComent"/>
        <ImageButton
            android:gravity="center"
            android:contentDescription=""
            android:background="@color/background"
            android:src="@drawable/atras"
            android:layout_width="100.0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnatras" />

    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <TextView
            android:gravity="center"
            android:textColor="@color/blanco"
            android:text="@string/txt29"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="100.0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView4" />
        <TextView
            android:gravity="center"
            android:textColor="@color/blanco"
            android:text="Eliminar"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textView5"
            android:layout_width="100.0dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:gravity="center"
            android:textColor="@color/blanco"
            android:text="Atras"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="100.0dp"
            android:layout_height="match_parent"
            android:id="@+id/textView6" />
    </LinearLayout>
</LinearLayout>
