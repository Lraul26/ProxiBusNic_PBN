<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:padding="15.0dp"
    android:layout_height="match_parent">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView1">

        <LinearLayout
            android:orientation="vertical"
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/linearLayout1"
            android:padding="10dp">
        
                <TextView
                    android:gravity="center"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Registro ruta"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="90.0dp"/>
            <TextView
                android:textColor="@android:color/white"
                android:text="NÃºmero de ruta"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblNumRuta" />
            <EditText
                android:textColor="@android:color/white"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtNumeroRuta" />
            <CheckBox
                android:text="Estado"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chkEstado" />
            <ImageView
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_width="match_parent"
            android:layout_height="100dp"

                android:id="@+id/imgFotoBus" />
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2">
                <Button
                android:text="Subir foto"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/btnAbrirGaleria" />
                <Button
                    android:text="Tomar foto"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnAbrirCamara" />
                <Button
              android:text="Borrar foto"
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:id="@+id/btnBorrarFoto" />
            
            </LinearLayout>
      
            
            <Button
      android:text="Asignar paradas"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/btnAsignarParadas" />

            
            <Button
    android:text="Guardar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/btnGuardar" />
    




        </LinearLayout>/>

    </ScrollView> />



</LinearLayout>
