<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:p4="http://xamarin.com/mono/android/designer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:padding="15.0dp"
    android:layout_height="match_parent">

        <TextView
        android:background="@color/background"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="141.5dp"
        android:id="@+id/txtparada" />
    <ImageView
        android:contentDescription=""
        android:src="@drawable/paradapordefecto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imgParada" />
    <TextView
        android:textColor="@color/blanco"
        android:text=""
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAlias" />

        <TextView
        android:textAlignment="center"
        android:textColor="@color/blanco"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtUbicacion" />

    <ImageButton
        android:src="@drawable/aceptar"
        android:background="@color/background"
    <Button
        
        android:text="@string/btnIr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnIr" />
     
         <TextView
        android:textAlignment="center"
        android:textColor="@color/blanco"
        android:text="Ir a"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtIr" />

</LinearLayout>
